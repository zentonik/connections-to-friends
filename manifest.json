{
  "manifest_version": 3,
  "name": "Connections to Friends",
  "version": "1.0",
  "description": "Replaces 'Connections' with 'Friends' on Roblox.",
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": ["https://www.roblox.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
